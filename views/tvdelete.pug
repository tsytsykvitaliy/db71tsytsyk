extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let tvid = toShow._id 
    - let tvbrand = toShow.brand
    - let screen = toShow.screen 
    - let screen_size = toShow.screen_size 
    - let actionid = "/resource/tv/" + tvid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='tvAttr mr-3') TV ID is: 
        div #{tvid} 
      div.row 
        div(class='tvAttr mr-3') TV Brand is: 
        div #{tvbrand} 
      div.row 
        div(class='tvAttr mr-3') Screen Type is: 
        div #{screen} 
      div.row 
        div(class='tvAttr mr-3') Screen Size is: 
        div #{screen_size} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the costume collection 
      window.location.href='/tv' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/tv' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    }